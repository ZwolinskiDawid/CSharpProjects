<Window x:Class="LAB2.CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB2"
        mc:Ignorable="d"
        Title="CreateWindow" Height="320.69" Width="229.468">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="108*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="59,14,0,0" TextWrapping="Wrap" Text="file.txt" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <RadioButton x:Name="File" Content="File" HorizontalAlignment="Left" Margin="68,62,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" IsChecked="True"/>
        <RadioButton x:Name="Directory" Content="Directory" HorizontalAlignment="Left" Margin="68,82,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="ReadOnly" Content="Read Only" HorizontalAlignment="Left" Margin="72,130,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
