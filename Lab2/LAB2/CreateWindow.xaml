        <CheckBox x:Name="SystemAtr" Content="System" HorizontalAlignment="Left" Margin="72,190,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Border BorderBrush="#FFABADB3" BorderThickness="1" HorizontalAlignment="Left" Height="94" Margin="59,121,0,0" VerticalAlignment="Top" Width="103" Grid.ColumnSpan="2"/>
        <Border BorderBrush="#FFABADB3" BorderThickness="1" HorizontalAlignment="Left" Height="56" Margin="59,52,0,0" VerticalAlignment="Top" Width="103" Grid.ColumnSpan="2"/>
        <Button x:Name="Cencel" Content="Cencel" HorizontalAlignment="Left" Margin="39,250,20,0" VerticalAlignment="Top" Width="58" Grid.Column="1" Click="Cencel_Click"/>
        <Button x:Name="Create" Content="Create" HorizontalAlignment="Left" Margin="72,250,0,0" VerticalAlignment="Top" Width="58" Grid.ColumnSpan="2" Click="Create_Click"/>

    </Grid>
</Window>
